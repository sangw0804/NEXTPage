<h2><%= t(".sign_in") %></h2>
<div class="container col-5">
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="d-flex flex-column align-items-center">
  <div class="form-inputs form-group align-self-stretch">
    <%= f.input :email, required: false, autofocus: true, input_html: { :class => 'form-control' } %>
    <%= f.input :password, required: false, input_html: { :class => 'form-control' } %>
  </div>
<%= f.input :remember_me, as: :boolean, input_html: { :class => 'form-control align-self-center' } if devise_mapping.rememberable? %>
  <div class="form-actions">
    <%= f.button :submit, t(".sign_in"), input_html: { :class => 'form-control align-self-center' } %>
  </div>
<% end %>

<div class="d-flex flex-column align-items-center">
<%= render "devise/shared/links" %>
</div>
</div>
</div>